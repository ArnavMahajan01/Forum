									<div class="row">
										
										<div class="col-12">
											<section>
												<p class="text-right"><a href="/newques?id=<%= JSON.stringify(cat[0]['forum_category_id']) %>"><b>+ New Query</b></a></p>
												<table id="example" class="display" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Question id</th>
                                                            <th>Question</th>
                                                            <th>Views</th>
                                                            <th>Created by</th>
                                                            <th>Last updated</th>
                                                            <th>Action</th>
                                                            
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <%list.forEach(function(entry) { %>
                                                        <tr>
                                                            <td><%=entry['question_id']%></td>
                                                            <td><a href="/question?id=<%=entry['question_id']%>&forum=<%= JSON.stringify(cat[0]['forum_category_id']) %>"><%=entry['question_header']%></a></td>
                                                            <td><%=entry['views_count']%></td>
                                                            <td><%=entry['created_by']%></td>
                                                            <td><%=entry['updated_dt']%></td>
                                                            <td>view</td>
                                                        </tr>
                                                        <%});%>
                                                    </tbody>

                                                </table>
                                            
											</section>
										</div>
										
										
									</div>
								</div>
							</section>

